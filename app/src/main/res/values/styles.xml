<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/highlight</item>

        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorPrimary">@color/foreground</item>
        <item name="android:actionMenuTextColor">@color/foreground</item>

        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Overriden in v23 -->
    </style>

    <!-- Toolbar -->
    <style name="Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">@color/background</item>
        <item name="colorControlNormal">@color/foreground</item>
    </style>

    <!-- Widgets -->
    <style name="Widget">
        <!-- Empty -->
    </style>

    <style name="Widget.TextView">
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.TextView.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="Widget.TextView.SemiBold">
        <item name="fontPath">@string/font_semibold</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontPath">@string/font_semibold</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
    </style>
</resources>